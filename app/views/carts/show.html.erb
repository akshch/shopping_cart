<h2>Cart show</h2>
<ul>
  <% @cart.line_items.each do |line_item| %>
    <li>Item: <%= line_item.product.name %>/ Price: <%= number_to_currency(line_item.product.price,  unit: "Rs") %>/ Quantity: <%= line_item.quantity %>/ Total Price: <%= number_to_currency(line_item.total_price,  unit: "Rs") %>
    # See lineItem section below for explanation of line_item links
    <ul>
      <li>
        <%= button_to "Add one", line_item_add_path(id: line_item), method: :post %>
        <%= button_to "Reduce one", line_item_reduce_path(:id => line_item), method: :post %>
      </li>
      <li>
        <%= button_to "Remove item", line_item_path(line_item), method: :delete, data: {confirm: "Are you sure?"} %>
      </li>
    </ul>
    #
  <% end %>
</ul>
<h3>Sub total: <%= number_to_currency(@cart.sub_total,  unit: "Rs") %></h3>
# See Order section below for explanation of new_order_path
<%= link_to "Proceed to checkout", new_order_path %><br>
#
<%= button_to "Empty cart", cart_path(@current_cart),method: :delete, data: {confirm: "Are you sure?"} %>