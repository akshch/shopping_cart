  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name, required: true, autofocus: true, placeholder: "Enter product name" %>
  </p>
  <p>
    <%= f.label :price %><br>
    <%= f.number_field :price, step: :any, required: true %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description, required: true, placeholder: "Enter product description" %>
  </p>
  <p>
    <%= f.label :image %><br>
    <%= f.file_field :image, required: true %>
  </p>