<h2>All Products</h2>
<div class="container-fluid">
  <div class="row">
  <% @products.each do |product| %>
    <div class="col-sm-3" style="padding-bottom: 25px;">
      <div class="card">
        <%= image_tag(product_image(product), alt: "#{product.name}", class: "card-img-top") %>
        <div class="card-body">
          <h5 class="card-title"><%= product.name.titleize %></h5>
          <h6 class="card-subtitle mb-2 text-muted">Price: <%= number_to_currency(product.price, unit: 'Rs') %></h6>
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
          <%= button_to "Add to cart", line_items_path(:product_id => product.id), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>

<%= link_to "New product", new_product_path %>